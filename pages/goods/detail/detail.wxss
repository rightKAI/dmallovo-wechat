} 
#app .detailsTab .header{
  position: static;
  width:100%;
  height:62rpx;
  text-align:center;
  z-index:99;
  border: none;
  margin-bottom: 39rpx;
  background-color:rgba(255,255,255,0.8);
  padding-top:20rpx;
padding-bottom:20rpx;

}
#app .detailsTab .header .tab{
  width: 654rpx;
  border: none;
  margin: 0 auto;
  font-size: 26rpx;
  color: #333;
}
#app .detailsTab .header .tab .active{
  color: #fff;
  background: #001a88;
