/*新建联系人 */
page {
  height: 100%;
  background: #fff;
}
.clearBoth:after {
  content: ".";
  clear: both;
  display: block;
  height: 0;
  overflow: hidden;
  visibility: hidden;
}
#app {
  height: auto;
  font-weight: 300;
  background: #fff;
}
#app .addForm .item{
  border-bottom: 1rpx solid #e8e8e8;
  background: #fff;
  color: #333;
  font-size: 30rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  position: relative;
  padding-left: 24rpx;
  overflow: hidden;
  height:98rpx;
  margin: 0 50rpx;
}
#app .addForm .item:last-child{
  border: none;
  height: auto;
}
#app .addForm .item .left{
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
}
#app .addForm .item:first-child .left{
  margin-right: 26rpx;
}
#app .addForm .item .right{
    -webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
    width: 100%;
    height: 98rpx;
    color: #525252;
    text-align: left;
    font-size: 26rpx;
    padding-right: 24rpx;
    -ms-flex-align: center;
    -webkit-box-pack: end;
    -ms-flex-pack: end;
    justify-content: flex-end;
        display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    position: relative;
}
input{
  display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
    width: 100%;
    height: 98rpx;
    color: #555;
    text-align: left;
    padding-left: 24rpx;
    -webkit-box-pack: end;
    -ms-flex-pack: end;
    justify-content: flex-end;
    font-size: 28rpx;
}
#app .addForm .item:nth-child(3) .right{
  padding-right: 60rpx;
  text-align: right;
}
#app .addForm .item .right picker{
  width: 100%;
  line-height: 98rpx;
  height:100%;
  text-align: left;
  padding-left:26rpx;
}
#app .addForm .item .right .picIcon{
  display: block;
  position: absolute;
  top: 40%;
  right: 15px;
  color: #999;
  width:12rpx;
  height: 24rpx;
  background-image: url(http://img-dmallovo.oss-cn-shenzhen.aliyuncs.com/icon/ICON-M/icon_next.png);
  background-size: 100% 100%;
}
#app .addForm .item:nth-child(4){
  border-bottom: 0;
  margin-bottom: 20rpx;
  min-height:99rpx;
  padding: 30rpx;
}
#app .addForm .item:nth-child(4) textarea{
  height:100%;
  width: 100%;
}
#app .submit{
  position: fixed;
  bottom:40rpx;
  width: 100%;
}
#app .submit .save{
  display: block;
  margin: 0 auto;
  width: 650rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  border-radius: 10rpx;
  background-color: #001a88;
  font-size: 32rpx;
  color: #fff;
}
#app .checkBox{
  display: block;
  float: left;
  width: 32rpx;
  height:32rpx;
  border:1rpx solid #ccc;
  margin-right: 21rpx;
}
#app .checked{
  border:none;
  width: 34rpx;
  height:34rpx;
  background-image: url(http://img-dmallovo.oss-cn-shenzhen.aliyuncs.com/icon/ICON-WebChar/shopCar/shopping_pitch.png);
  background-size: 100% 100%;
}
.defalutText{
  color: #333;
  font-size: 26rpx;
}