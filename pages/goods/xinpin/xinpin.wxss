/* pages/goods/list/list.wxss */
@import "/dist/index.wxss";
@import "/utils/fixMenu.wxss";
@import "/utils/shoplist.wxss";
page {
  width:100%;
  max-width:100%;
  -webkit-user-select:none;
  user-select:none;
   background: #F6F8FE; 
  border-top: 1px solid #cdcdcd;
  overflow-x:hidden;
  overflow-y: hidden; 
}

#app {
  width:100%;
  overflow-x:hidden;
  background: #fff;
  margin-bottom: 100rpx;
}

.zan-loadmore--nomore {
  width: 100%;
  bottom: 121rpx;
}

.zan-loadmore--nomore::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(1);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e8e8e8;
  border-top-width: 1px;
}

.clearBoth:after {
  content: ".";
  clear: both;
  display: block;
  height: 0;
  overflow: hidden;
  visibility: hidden;
}

#app .goods-list {
  width: 100%;
  margin: 30rpx 0 0 30rpx;
  position: relative;
}

#app .goods-list .item {
  width: 345rpx;
  height: 410rpx;
  position: relative;
  float: left;
  margin-bottom: 30rpx;
}

#app .goods-list .item .item-images image {
  width: 345rpx;
  height: 410rpx;
}

#app .goods-list .item .text {
  position: absolute;
  top: 24rpx;
  left: 21rpx;
}

#app .goods-list .item .text .first {
  color: #333;
  font-size: 30rpx;
  line-height: 28rpx;
  font-weight: 800;
  margin-bottom: 10rpx;
}

#app .goods-list .item .text .second {
  color: #666;
  font-size: 24rpx;
  line-height: 28rpx;
}
