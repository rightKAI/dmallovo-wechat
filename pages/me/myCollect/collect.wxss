
page {
  height: 100%;
  background: #fff;
}

.clearBoth:after {
  content: ".";
  clear: both;
  display: block;
  height: 0;
  overflow: hidden;
  visibility: hidden;
}

#app {
  height: auto;
  font-weight: 300;
  background: #fff;
}
#app .tab{
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    border-bottom: solid 1rpx #ededed;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
}
#app .tab .item{
    width: 1%;
    -webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
    position: relative;
    text-align: center;
    color: #585858;
    font-size: 28rpx;
    line-height: 85rpx;
    display: block;
    background-color: #fff;
}
#app .tab .items{
  color: #001a88
}
#app .tab .items::before{
    content: "";
    width: 60%;
    height: 4rpx;
    position: absolute;
    left: 15%;
    bottom: 0;
    z-index: 4;
    background-color: #001a88;
}
#app .content{
  /* margin-top: 100rpx; */
  border-top: solid 1rpx #e8e8e8;
}
#app .gItem{
    height: 180rpx;
    background: #fff;
    padding: 30rpx 0rpx 30rpx 230rpx;
    margin-top: 20rpx;
    position: relative;
    z-index: 888;
    border-bottom: solid 1px #e8e8e8;
    margin: 0 50rpx;
}
#app .gItem .clickArea{
  width: 100%;
  height:100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 998;
}
#app .gItem .img{
    position: absolute;
    width: 180rpx;
    height: 180rpx;
    background: #f5f5f5;
    top: 30rpx;
    left: 0rpx;
    overflow: hidden;
}
#app .gItem .img image{
    width: 180rpx;
    height: 180rpx;
    background: #f5f5f5;
}
#app .gItem .icontent{
  width: 100%;
  height:100%;
  position: relative;
}
#app .gItem .icontent .name{
    font-size: 30rpx;
    font-weight: bold;
    color: #333;
    width: 320rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
#app .gItem .icontent .footer{
  width: 100%;
  position: absolute;
  bottom:0;
  left: 0;
}
 .price{
  font-size: 26rpx;
  color: #333;
  position: absolute;
  right: 0;
  top: 5rpx;
}
#app .gItem .icontent .footer .cancelCollect{
  float: right;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #333;
  border: solid 1rpx #BDBDBD;
  border-radius: 10px;
  text-align: center;
  z-index: 999;
}
.noOrder {
  /* padding-top: 160rpx; */
  height: 100%;
  text-align: center;
}
.noOrder > image {
  width: 200rpx;
  height: 200rpx;
}
.noOrder > .txt {
  padding-top: 30rpx;
  font-size: 26rpx;
  color: #333;
}
.tit{
  font-size:42rpx;
  font-weight: bold;
  margin-top: 63rpx;
  color: #333;
}
.alink{
  width:362rpx;
  height:72rpx; 
  line-height: 72rpx;
  color: #333;
  font-size: 32rpx;
  border: solid 1px #BDBDBD;
  border-radius: 10rpx;
  margin: 0 auto;
}
.xuanzhe{
  background: #001A88;
  color: #fff;
  margin-top: 75rpx;
  margin-bottom: 30rpx;
  border: solid 1px #001A88;
}