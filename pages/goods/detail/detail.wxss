  height: 60rpx;
  line-height: 60rpx;
  border-color:#001a88;
}
#app .detailsTab .header .tab text{
  display: block;
  float: left;
  width: 215rpx;
  height: 60rpx;
  line-height: 60rpx;
  border:1rpx solid #bdbdbd;
  background: #fff;
}
#app .detailsTab .header .tab text:nth-child(1){
  margin-left: 0
}
#app .detailsTab .header .tab text:nth-child(2){
  margin: 0;
  border-left: none;
  border-right:none;
}
#app .kzyl .ylBack{
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: rgba(0,0,0,.7);
    z-index: 2002;
}
#app .kzyl .ylxg{
    position: fixed;
    background-color: #fff;
    top: 50%;
    left: 50%;
    -webkit-transform: translate3d(-50%,-50%,0);
    transform: translate3d(-50%,-50%,0);
    transition: .2s ease-out;
    z-index: 10001;
}
#app .kzyl .ylxg image{
    position: absolute;
    width: 500rpx;
    height: 500rpx;
    top: -350rpx;
    right: -250rpx;
}
#app .kzyl .ylxg .close{
    position: absolute;
    width: 64rpx;
    height: 64rpx;
    background-image: url(http://img-dmallovo.oss-cn-shenzhen.aliyuncs.com/icon/ICON-M/close.png);
    background-repeat: no-repeat;
    background-size: cover;
    bottom: -300rpx;
    right: -20rpx;
}
#app .kzyl .ylxg .wz{
    position: absolute;
    width: 390rpx;
    font-size: 45rpx;
    left: -200rpx;
    top: -130rpx;
    text-align: center;
}
.clearBoth:after{
    content:".";
    clear:both;
    display:block;
    height:0;
    overflow:hidden;
    visibility:hidden;
}
