page {
  width: 100%;
  max-width: 100%;
  -webkit-user-select: none;
  user-select: none;
  background: #fff;
  overflow-x: hidden;
  min-height: 100%;
}

#app {
  width: 100%;
  overflow-x: hidden;
  min-height: 100%;
}

#topLine {
  height: 0;
  background: #e8e8e8;
  width: 100%;
  border-bottom: 1rpx solid #e8e8e8;
  position: fixed;
  top: 0;
  z-index: 9999;
}
.clearBoth:after {
  content: ".";
  clear: both;
  display: block;
  height: 0;
  overflow: hidden;
  visibility: hidden;
}
#app > .header {
  padding: 100rpx 0 92rpx 238rpx;
}

#app > .header > image {
  width: 274rpx;
  height: 65rpx;
}

#app > .content .inputArea {
  position: relative;
  margin: 0 auto;
  border: 1rpx solid #e8e8e8;
  width: 600rpx;
  height: 90rpx;
  border-radius: 50rpx;
}

#app > .content .inputArea .areaNum {
  display: block;
  float: left;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #333;
  margin-left: 40rpx;
}

#app > .content .inputArea .icon {
  margin: 0 10rpx;
  float: left;
  display: block;
  width: 13rpx;
  height: 7rpx;
  background-image: url(http://img-dmallovo.oss-cn-shenzhen.aliyuncs.com/icon/ICON-M/btn_xiala@2x.png);
  background-size: cover;
  margin-top: 42rpx;
}
#app > .content .inputArea input{
  float: left;
  height: 90rpx;
  font-size: 30rpx;
  color: #333;
}
#app > .content .getVerifyCode {
  position: relative;
  margin: 0 auto;
  border: 1rpx solid #e8e8e8;
  width: 600rpx;
  height: 90rpx;
  border-radius: 50rpx;
  margin-top: 40rpx;
}
#app > .content .getVerifyCode input{
  float: left;
  width: 340rpx;
  height: 90rpx;
  font-size: 28rpx;
  color: #333;
  padding-left: 40rpx;
}
#app > .content .getVerifyCode .title{
  display: block;
  float: left;
  color: #333;
  font-size: 26rpx;
  line-height: 90rpx;
  text-align: right;
  padding-right:36rpx;
  width:184rpx;
}
#app > .content .goLogin {
  width: 600rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #7e8cc3;
  border-radius: 50rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 60rpx;
  color: #fff;
  font-size: 32rpx;
}

#app > .content .wechatLogin {
  width: 600rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #15c035;
  border-radius: 50rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 60rpx;
  color: #fff;
  font-size: 32rpx;
}

#app .userEnter {
  position: fixed;
  bottom: 78rpx;
  width: 100%;
  text-align: center;
  color: #999;
  font-size: 24rpx;
}
